root = true

[*]
max_line_length = 300
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.go]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 2

[*.make]
indent_style = tab
indent_size = 2
